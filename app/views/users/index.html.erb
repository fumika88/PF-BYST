
<div class="container text-center py-4">
<div class="row text-center py-4">
<% @users.each do |user| %>

<div class="col-md-3.5 mt-2 mx-5">

<div class="card" style="width: 12.5rem;">
<%= attachment_image_tag(user, :profile_image, :fill, 300, 300, fallback: "noimage.jpeg", size: '200x200', class: "rounded") %>
<div class="card-body">
<h6 class="card-title"><%= user.name %></h6>
 <p class="card-text"><%= user.introduction %></P>


</div>
</div>
</div>

<% end %>
</div>

</div>
</div>