<%# ハッシュタグ一覧 %>
<div class="container">
<h3 class="text-center my-3">HashTag Lists</h3>
<h3 class="text-center my-3">[ #<%= @tag.hashname %> ]</h3>
<div class="row">

<% @photos.each do |photo| %>
<div class="col-md-3.5 mt-2 mx-auto my-3">
<div class="card-deck">
<div class="card">
<div>
<%= link_to photo_path(photo.id) do %>
<%= attachment_image_tag photo, :image, :fill, 300, 300, format: 'jpeg', fallback: 'noimage.jpg', size: '300x300', class: "rounded" %>
<% end %>
</div>

<div class="card-body bg-light text-dark">
<h6 class="card-title"><%= photo.name %></h6>
<p class="card-text">
<p>［Category] :
<%= link_to photo_category_path(id: photo.category.id) do %>
<%= photo.category.name %>
<% end %>
</p>

</div>
</div>
</div>
</div>
<% end %>
</div>
</div>
