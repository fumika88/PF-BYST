<div class="container-fulid">
<div class="row text-align:left my-3 mx-3">
  <h1>画像投稿フォーム</h1>
<div class="col-md-12 text-center">


<%= form_with model: @photo, local:true do |f| %>
  <div class="my-3 h5">Image</div>
  <div class="my-3"><%= f.attachment_field :image %></div>
  <div class="my-3">商品名</div>
  <div class="my-3"><%= f.text_field :name, size: "30x4" %></div>
  <div class="my-3">#タグ</div>
  <div class="my-3"><%= f.text_area :caption, size: "30x5" %></div>
  <div class="my-3"><%= f.submit '投稿' %></div>
<% end %>

</div>
</div>
</div>