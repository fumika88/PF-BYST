<%# いいね機能 %>
 <% if photo.favorited_by?(current_user) %>
  <%= link_to photo.favorites.count, photo_favorites_path(photo), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
 <% else %>
  <%= link_to photo.favorites.count, photo_favorites_path(photo), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
 <% end %>